# crypto-scout-client secrets (example)
# Copy this file to secret/client.env and fill in real values.
# IMPORTANT: Do NOT commit secret/client.env to VCS.

# Modules
CMC_PARSER_MODULE_ENABLED=false
BYBIT_PARSER_MODULE_ENABLED=false
BYBIT_STREAM_MODULE_ENABLED=true

# Server
SERVER_PORT=8081

# DNS
DNS_ADDRESS=8.8.8.8
DNS_TIMEOUT_MS=10000

# RabbitMQ Streams
AMQP_RABBITMQ_HOST=localhost
AMQP_RABBITMQ_USERNAME=crypto_scout_mq
AMQP_RABBITMQ_PASSWORD=
AMQP_STREAM_PORT=5552

# Bybit API
BYBIT_API_KEY=
BYBIT_API_SECRET=

# CoinMarketCap API
CMC_API_KEY=

# JVM (optional)
# JAVA_TOOL_OPTIONS can override Dockerfile defaults. Example enabling heap dumps:
#JAVA_TOOL_OPTIONS=-XX:+ExitOnOutOfMemoryError -XX:MaxRAMPercentage=70 -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=/tmp
